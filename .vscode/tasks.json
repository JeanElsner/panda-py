{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pytest",
      "type": "shell",
      "command": "pytest --cov panda-py ./tests/"
    },
    {
      "label": "pylint",
      "type": "shell",
      "command": "pylint --rcfile .pylintrc src/"
    },
    {
      "label": "generate-stub",
      "type": "shell",
      "command": "pybind11-stubgen -o ./src/ panda_py --enum-class-locations RealtimeConfig:panda_py.libfranka --enum-class-locations VacuumGripperProductionSetupProfile:panda_py.libfranka"
    },
    {
      "label": "build-doc",
      "type": "shell",
      "command": "cd docs && make clean && make html"
    },
    {
      "label": "generate-doc-api",
      "type": "shell",
      "command": [".vscode/generate_docs_api.sh"]
    }
  ]
}
